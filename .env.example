# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=fullstack_dev

# DATABASE_URL for connecting from the host machine
DATABASE_URL=postgresql://devuser:devpassword@localhost:5432/fullstack_dev

# For docker-compose services, use the following instead:
# DATABASE_URL=postgresql://devuser:devpassword@postgres:5432/fullstack_dev

# JWT Configuration
# IMPORTANT: Generate a secure secret for production: openssl rand -base64 64
# The secret must be at least 32 characters long
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# Logging Configuration
LOG_LEVEL=info

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
