# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=fullstack_dev
PGADMIN_DEFAULT_PASSWORD=dev-password-123

# DATABASE_URL for connecting from the host machine (local dev)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# For docker-compose services, use the following instead (service DNS names):
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# JWT Configuration
# IMPORTANT: Generate a secure secret for production: openssl rand -base64 64
# The secret must be at least 32 characters long
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# Logging Configuration
LOG_LEVEL=info

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Production Notes:
# - Set NODE_ENV=production in production environments.
# - Always set a strong JWT_SECRET; do not use the example.
# - Consider using separate credentials and database name (e.g., POSTGRES_DB=fullstack_prod).
